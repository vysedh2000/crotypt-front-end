pipeline {
    agent any

    environment {
        REGISTRY   = "192.168.8.26:443"
        IMAGE_NAME = "testapp"
        IMAGE_TAG  = "${env.BUILD_NUMBER}"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Docker Login') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'docker-registry-cred',
                                                 usernameVariable: 'REG_USER',
                                                 passwordVariable: 'REG_PASS')]) {
                    sh """
                    echo ">>> Logging into registry..."
                    echo "$REG_PASS" | docker login $REGISTRY -u "$REG_USER" --password-stdin
                    """
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                sh """
                docker build -t $REGISTRY/$IMAGE_NAME:$IMAGE_TAG .
                """
            }
        }

        stage('Push Docker Image') {
            steps {
                sh """
                docker push $REGISTRY/$IMAGE_NAME:$IMAGE_TAG
                """
            }
        }

        stage('Deploy to Minikube') {
            steps {
                sh """
                kubectl set image deployment/$IMAGE_NAME $IMAGE_NAME=$REGISTRY/$IMAGE_NAME:$IMAGE_TAG --record || true
                """
            }
        }
    }

    post {
        success {
            echo "âœ… Deployed version: $IMAGE_TAG"
        }
        failure {
            echo "Not success"
        }
    }
}
